# Application settings
ENV=development
APP_NAME="Concierge Psychiatry Platform"
APP_VERSION=1.0.0
DEBUG=false
API_PREFIX=/api/v1
BACKEND_CORS_ORIGINS=["http://localhost:8000", "http://localhost:3000"]

# Security settings
SECRET_KEY=development_secret_key_change_in_production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database settings
DATABASE_URL=sqlite:///./app.db

# HIPAA Compliance settings
HIPAA_ENABLED=true
PHI_LOG_SANITIZER_ENABLED=true
PHI_LOG_SANITIZER_PATTERNS_FILE=phi_patterns.yaml

# MentaLLaMA service settings
MENTALLLAMA_PROVIDER=mock
# Use AWS Bedrock in production
# MENTALLLAMA_PROVIDER=aws_bedrock
# MENTALLLAMA_AWS_REGION=us-east-1
# MENTALLLAMA_AWS_ACCESS_KEY_ID=your_access_key
# MENTALLLAMA_AWS_SECRET_ACCESS_KEY=your_secret_key
MENTALLLAMA_DEFAULT_MODEL=claude-v2
MENTALLLAMA_DEPRESSION_DETECTION_MODEL=anthropic.claude-v2
MENTALLLAMA_RISK_ASSESSMENT_MODEL=anthropic.claude-v2
MENTALLLAMA_SENTIMENT_ANALYSIS_MODEL=anthropic.claude-v2
MENTALLLAMA_WELLNESS_DIMENSIONS_MODEL=anthropic.claude-v2
MENTALLLAMA_MAX_TOKENS=1024
MENTALLLAMA_TEMPERATURE=0.7
MENTALLLAMA_TIMEOUT_SECONDS=30
MENTALLLAMA_REQUEST_RETRIES=3
# MENTALLLAMA_ENCRYPTION_KEY_ID=your_kms_key_id
MENTALLLAMA_LOG_PHI=false
MENTALLLAMA_CACHE_RESULTS=true
MENTALLLAMA_CACHE_TTL_SECONDS=3600

# PHI Detection settings
PHI_DETECTION_ENABLED=true
PHI_DETECTION_PROVIDER=internal
PHI_DETECTION_DETECTION_LEVEL=strict
# PHI_DETECTION_AWS_REGION=us-east-1
# PHI_DETECTION_AWS_ACCESS_KEY_ID=your_access_key
# PHI_DETECTION_AWS_SECRET_ACCESS_KEY=your_secret_key

# Digital Twin settings
DIGITAL_TWIN_ENABLED=false
DIGITAL_TWIN_PROVIDER=internal
# DIGITAL_TWIN_MODEL_PATH=/path/to/model
