# General Configuration
ENVIRONMENT=development  # development, staging, production
DEBUG=true
LOG_LEVEL=INFO

# Database Configuration
DATABASE_URL=postgresql+asyncpg://username:password@localhost:5432/novamind
TEST_DATABASE_URL=postgresql+asyncpg://username:password@localhost:5432/novamind_test

# Security Configuration
SECRET_KEY=your-secret-key-for-jwt
ACCESS_TOKEN_EXPIRE_MINUTES=60
ALGORITHM=HS256

# AWS Configuration
AWS_REGION=us-west-2
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key

# AWS Cognito Configuration
COGNITO_USER_POOL_ID=us-west-2_xxxxxxxx
COGNITO_APP_CLIENT_ID=xxxxxxxxxxxxxxxxxxxxxxxx
COGNITO_JWKS_URL=https://cognito-idp.{region}.amazonaws.com/{userPoolId}/.well-known/jwks.json

# S3 Configuration
S3_BUCKET_NAME=novamind-documents

# KMS Configuration
KMS_KEY_ID=arn:aws:kms:us-west-2:123456789012:key/abcd1234-abcd-1234-abcd-1234abcd1234

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Logging Configuration
LOG_FILE_PATH=logs/novamind.log
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_RETENTION_DAYS=30

# Email Configuration
EMAIL_ENABLED=false
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USERNAME=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=no-reply@novamind.com

# Twilio Configuration (for SMS)
TWILIO_ENABLED=false
TWILIO_ACCOUNT_SID=your-account-sid
TWILIO_AUTH_TOKEN=your-auth-token
TWILIO_PHONE_NUMBER=+12345678900

# Redis Configuration (for caching and rate limiting)
REDIS_URL=redis://localhost:6379/0

# PAT Configuration
PAT_PROVIDER=mock                    # Provider: 'mock' or 'bedrock'
PAT_STORAGE_PATH=/tmp/pat            # Storage path for mock provider
PAT_BUCKET_NAME=novamind-pat-data    # S3 bucket for Bedrock provider
PAT_TABLE_NAME=novamind-pat-analyses # DynamoDB table for Bedrock provider
PAT_KMS_KEY_ID=arn:aws:kms:us-west-2:123456789012:key/abcd1234-abcd-1234-abcd-1234abcd1234  # KMS key ARN for encryption
PAT_MODEL_ID=amazon.titan-embed-text-v1  # Bedrock model ID
