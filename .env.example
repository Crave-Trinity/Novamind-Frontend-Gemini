# NOVAMIND Platform Environment Variables
# HIPAA-Compliant Configuration Example
# 
# IMPORTANT: Copy this file to .env and fill in all required values.
# Never commit the actual .env file containing secrets to version control!

# API Settings
API_V1_STR=/api/v1
PROJECT_NAME=NOVAMIND

# Security Settings
SECRET_KEY=generate_a_secure_random_key_with_secrets.token_urlsafe(32)
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# JWT Settings
JWT_SECRET_KEY=generate_different_secure_key_with_secrets.token_urlsafe(32)
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# HIPAA Security Settings
PHI_ENCRYPTION_KEY=fill_with_secure_32byte_key_for_phi_encryption
PHI_ENCRYPTION_SALT=novamind_phi_salt  # Change in production

# Audit Logging Settings
AUDIT_LOG_LEVEL=INFO
AUDIT_LOG_FILE=logs/phi_audit.log
AUDIT_LOG_TO_FILE=true
EXTERNAL_AUDIT_ENABLED=false

# Environment Setting
ENVIRONMENT=development  # Options: development, staging, production

# Database Settings
DATABASE_URL=postgresql://postgres:password@localhost:5432/novamind
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10

# AWS Settings (for HIPAA-compliant storage)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_PHI_BUCKET=novamind-phi-data-bucket

# Cognito Settings (for HIPAA-compliant authentication)
COGNITO_USER_POOL_ID=your_cognito_user_pool_id
COGNITO_APP_CLIENT_ID=your_cognito_app_client_id
COGNITO_REGION=us-east-1

# Logging Settings
LOG_LEVEL=INFO
LOG_DIR=logs

# Rate Limiting Settings
RATE_LIMIT_DEFAULT=100/minute
RATE_LIMIT_AUTH=20/minute
RATE_LIMIT_SIGNUP=5/minute

# Email Settings (for notifications)
SMTP_TLS=True
SMTP_PORT=587
SMTP_HOST=smtp.example.com
SMTP_USER=your_smtp_username
SMTP_PASSWORD=your_smtp_password
EMAILS_FROM_EMAIL=noreply@novamind.com
EMAILS_FROM_NAME=NOVAMIND Psychiatry

# TLS Settings (for HIPAA-compliant transmission)
USE_TLS=True
MINIMUM_TLS_VERSION=TLSv1.2

# Feature Flags
ENABLE_DIGITAL_TWIN=False
ENABLE_ML_SERVICES=False

# BAA Settings
BAA_STATUS=active
BAA_SIGNATURES_COMPLETE=True

# Session Management
SESSION_EXPIRY_WARNING_MINUTES=5
SESSION_EXTEND_ON_ACTIVITY=True
